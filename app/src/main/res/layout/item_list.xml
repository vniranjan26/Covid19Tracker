<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:id="@+id/stateTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="Uttar Pradesh"
            android:textAllCaps="true"
            android:textColor="@android:color/black"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/lastupdatetimeTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:gravity="center_vertical"
            android:text="Hello"
            android:textAllCaps="true"
            android:textColor="@color/light_red"
            android:textStyle="bold" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="4">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
        <TextView
            android:id="@+id/confirmedTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="100000000"
            android:textAlignment="viewEnd"
            android:textAllCaps="true"
            android:textStyle="bold" />
            <TextView
                android:id="@+id/deltaconfirmedTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:textAlignment="viewEnd"
                android:layout_marginRight="2dp"
                android:text="Hello"
                android:textAllCaps="true"
                android:textColor="@color/light_red"
                android:textStyle="bold" />
        </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/activeTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:text="100000000"
                    android:textAlignment="viewEnd"
                    android:textAllCaps="true"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/deltaactiveTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:textAlignment="viewEnd"
                    android:text=""
                    android:textAllCaps="true"
                    android:textColor="@color/light_red"
                    android:textStyle="bold" />
            </LinearLayout>
        <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:id="@+id/recoveredTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="100000000"
            android:textAlignment="viewEnd"
            android:textAllCaps="true"
            android:textStyle="bold" />

            <TextView
                android:id="@+id/deltarecoveredTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hello"
                android:layout_marginRight="2dp"
                android:textAlignment="viewEnd"
                android:textAllCaps="true"
                android:textColor="@color/light_red"
                android:textSize="12dp"
                android:textStyle="bold" />
        </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/deceasedTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="100000000"
            android:textAlignment="viewEnd"
            android:textAllCaps="true"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/deltadeceasedTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hello"
            android:layout_marginRight="2dp"
            android:textAlignment="viewEnd"
            android:textAllCaps="true"
            android:textColor="@color/light_red"
            android:textSize="12dp"
            android:textStyle="bold" />
    </LinearLayout>
    </LinearLayout>





</LinearLayout>